{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "editor.tabSize": 2,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.format.enable": false,
  "tailwindCSS.experimental.classRegex": [
    // Adapted from https://github.com/tailwindlabs/tailwindcss/issues/7553#issuecomment-917271069
    // Highlights from `// @ts` to the next semicolon
    [
      "//\\s?@tw\\s?([^;]*);",
      "'([^']*)'"
    ],
    // Adapted from https://github.com/tailwindlabs/tailwindcss/issues/7553#issuecomment-735915659
    [
      "classnames\\(([^)]*)\\)",
      "'([^']*)'"
    ]
  ],
  "yaml.schemas": {
    "https://json.schemastore.org/prettierrc.json": ".prettierrc"
  },
  "prettier.enable": false
}
